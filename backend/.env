# .env file for Flask application with Firebase integration

# Flask Configuration
FLASK_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/math_fruit_ninja

# For MongoDB Atlas (cloud database), use this format instead:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/math_fruit_ninja?retryWrites=true&w=majority

# Firebase Configuration
# Path to your Firebase service account JSON file
FIREBASE_SERVICE_ACCOUNT_KEY=firebase-service-account.json

# CORS Settings (if needed)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# API Configuration
API_VERSION=v1
API_PREFIX=/api